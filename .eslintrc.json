{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended", "airbnb"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "max-len": [
      "warn",
      {
        "code": 120,
        "tabWidth": 2,
        "comments": 200,
        "ignoreUrls": true,
        "ignoreStrings": false
      }
    ]
  }
}
